<h1>Employee Form</h1>
<%= form_for @employee do |f|%>
    <label>First Name: </label>
    <%= f.text_field :first_name%><br>

    <label>Last Name: </label>
    <%= f.text_field :last_name%><br>

    <label>Alias: </label>
    <%= f.text_field :alias%><br>

    <label>Title: </label>
    <%= f.text_field :title%><br>

    <label>Office: </label>
    <%= f.text_field :office%><br>

    <div>
        Dog He/She Attends:
        <select name="dog_id">
            <% @dogs.each do |dog|%>
                <% if @employee.dog.id == dog.id %>
                    <option selected value="<%= dog.id %>">
                        <%= dog.name %>
                    </option>
                <% else %>
                    <option value="<%= dog.id %>">
                        <%= dog.name %>
                    </option>
                <% end %>   
            <% end %>
        </select>
    </div>

    <%= f.submit %>
<% end %>